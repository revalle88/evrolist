<h1>Listing products</h1>

<table  class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Id1c</th>
      <th>Descriptionfull</th>
      <th>Descriptionmin</th>
      <th>Articul</th>
      <th>Baseunit</th>
      <th>Shtrihkod</th>
      <th>Standart</th>
      <th>Price</th>
      <th>Rest</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.id1c %></td>
        <td><%= product.descriptionFull %></td>
        <td><%= product.descriptionMin %></td>
        <td><%= product.articul %></td>
        <td><%= product.baseUnit %></td>
        <td><%= product.shtrihkod %></td>
        <td><%= product.standart %></td>
        <td><%= product.price %></td>
        <td><%= product.rest %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

