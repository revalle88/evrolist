 <%= will_paginate @orders, :previous_label => 'назад <<', :next_label => '>> вперед' %>
<br>

<table  class="table table-bordered table-striped">


  <thead>
    <tr>
      <th>Заказ</th>
      <th>Цена</th>
      <th>Статус</th>
      <th>Время создания</th>
         <th>Время последнего изменения</th>
         <th></th>
         <th></th>
     
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
       
        <td><%= order.subtotal %> р.</td>

        <td><%= order.order_status.name %> </td>

         <td><%= order.created_at %> </td>

         <td><%= order.updated_at %> </td>

         <td><%= link_to 'Просмотреть', controller: "orders", action: "show", id: order.id %></td>
        <td><%= link_to 'Удалить', controller: "orders", action: "delete", id: order.id%></td>


        </tr>
       
    <% end %>
  </tbody>
</table>

<br>