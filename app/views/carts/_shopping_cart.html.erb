$(document).ready ( function () {
$("#pay_btn").click(function() {
  alert("clicked!"); 
   $.ajax({
      url: "/static_pages/fileopen",
      type: "POST",
      data: {name: $(this).val()},
      success: function (data) { 
          // append data to your page
          $("page_element").html(data);
      }
  });
 alert("ajax done!"); 
});
});
